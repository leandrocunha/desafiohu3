#Offer
  .container
    max-width: 940px
    
    > header
      .title
        {MontserratBold}
        font-size: 1.5rem
        margin: 0 0 10px 0
        
      .location
        color: $dove-gray
        font-size: .9rem
        margin: 0 0 10px 0
        
      p
        color: $dove-gray
        font-size: .8rem
        margin: 0 0 75px 0
        
    .slideshow
      margin: 0 0 65px 0
      
      .wrapper
        height: 370px
        margin: 0 0 10px 0
        overflow: hidden
        
        .slide
          background-size: cover
          background-position: center
          border-radius: 3px
          height: 370px
          width: 100%
          
          img
            display: none
            
      .nav
        height: 60px
        overflow: hidden
        text-align: center
        
        .slide
          background-size: cover
          background-position: center
          cursor: pointer
          display: inline-block
          height: 60px
          margin: 0 10px 0 0
          transition: all .3s ease
          width: 95px
          
          &:last-of-type
            margin-right: 0
            
          &:hover
            opacity: .5
            
          img
            display: none
        
        
    .options
      header
        cf()
        border-bottom: $mercury 1px solid
        margin: 0 0 30px 0
        padding: 0 0 10px 0
        
        .section-title
          float: left
          font-size: 1.2rem
          margin: 0
          text-align: left
          
        form
          float: right
          margin: -8px 0 0 0
          
          .form-control
            float: left
            margin: 0 25px 0 0
            
            &:last-of-type
              margin-right: 0
            
            label
              font-size: .8rem
            
            .select-wrapper
              display: inline-block
              position: relative
              
              select
                -webkit-appearance: none
                border: 1px $alto solid
                border-radius: 2px
                box-shadow: 0 1px 1px rgba(0,0,0,0.1)
                font-size: .8rem
                outline: none
                padding: 8px 10px
                width: 200px
                
              &:after
                border-color: $flush-orange transparent transparent transparent
                border-style: solid
                border-width: 4px 5px 0 5px
                content: ''
                display: block
                height: 0
                position: absolute
                right: 10px
                top: 14px
                width: 0
                
              &:before
                background-color: $alto
                content: ''
                height: 33px
                position: absolute
                right: 30px
                top: 0
                width: 1px
            
      .option
        cf()
        background-color: $white
        box-sizing: boder-box
        border: 1px $alto solid
        margin: 0 0 20px 0
        transition: all .3s ease
        
        &:hover
          border: 1px $flush-orange solid

        .info,
        .departures,
        .specs,
        .price          
          .wrapper
            border-right: $mercury 1px solid
            box-sizing: boder-box
            height: 160px
            padding: 20px
          
        .info
          column(3/7, gutter: 0)
          
          .title
            margin: 0 0 10px 0
            
          p
            color: $dove-gray
            font-size: .8rem
          
          
        .departures,
        .specs
          column(1/7, gutter: 0)
          
          .title
            margin: 0 0 10px 0
            
          li
            color: $dove-gray
            font-size: .8rem
            margin: 0 0 8px 0
            
          .daily,
          .person
            text-align: center
            
            p
              font-size: 1.2rem
              
              &.small
                font-size: .8rem
                margin-top: 3px
              
              i
                font-size: .98rem
                
          .daily
            margin: 0 0 18px 0
            
          .person
            margin: 18px 0 0 0
          
        .price
          column(2/7, gutter: 0)
          text-align: center
          
          .wrapper
            border-right: none
            
            p              
              &:nth-of-type(2n),
              &.taxes
                color: $dove-gray
                font-size: .9rem
                margin: 0 0 10px 0
                
              &.warning
                font-size: .8rem
                margin: 0 0 25px 0
                
                &.orange
                  color: $flush-orange
                  
                &.green
                  color: $limeade
                
              &.price-value
                font-size: 2rem
                
                span
                  font-size: 1rem

            .buy
              background-color: $flush-orange
              border: none
              border-radius: 3px
              color: $white
              cursor: pointer
              font-size: .8rem
              margin: 5px 0 0 0
              padding: 7px 30px
              text-transform: uppercase
